generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//////////////////////////////////////////////////
//         U S U A R I O S   &   AUTH           //
//////////////////////////////////////////////////

model Usuario {
  id        Int      @id @default(autoincrement())
  nombre    String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  profesional   Profesional?
}

model Profesional {
  id          Int      @id @default(autoincrement())
  nombre      String
  descripcion String?
  experiencia Int
  rating      Float?
  telefono    String
  direccion   String
  ubicacion   String
  horario     String
  disponible  Boolean  @default(true)
  precioMin   Int
  precioMax   Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  usuario     Usuario @relation(fields: [usuarioId], references: [id])
  usuarioId   Int     @unique // @unique hace que sea 1-a-1

  profesion   Profesion @relation(fields: [profesionId], references: [id])
  profesionId Int
}

//////////////////////////////////////////////////
//            C A T √Å L O G O S                 //
//////////////////////////////////////////////////

model Categoria {
  id          Int      @id @default(autoincrement())
  nombre      String
  descripcion String?
  estatus     Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  profesiones Profesion[]
}

model Profesion {
  id          Int      @id @default(autoincrement())
  nombre      String
  descripcion String?
  estatus     Boolean  @default(true)

  categoria   Categoria @relation(fields: [categoriaId], references: [id])
  categoriaId Int

  profesionales Profesional[]
}