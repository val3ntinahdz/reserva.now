generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//////////////////////////////////////////////////
//         U S U A R I O S   &   AUTH           //
//////////////////////////////////////////////////

model Usuario {
  id        Int      @id @default(autoincrement())
  nombre    String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  citas         Cita[]
  reseñas       Reseña[] 
  profesional   Profesional?

  walletAddress     String        @unique
  keyId             String
  privateKeyPath    String
}

model Profesional {
  id          Int      @id @default(autoincrement())
  nombre      String
  descripcion String?
  experiencia Int
  rating      Float?
  telefono    String
  direccion   String
  ubicacion   String
  horario     String
  disponible  Boolean  @default(true)
  precioMin   Int
  precioMax   Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  usuario     Usuario @relation(fields: [usuarioId], references: [id])
  usuarioId   Int     @unique // @unique hace que sea 1-a-1

  profesion   Profesion @relation(fields: [profesionId], references: [id])
  profesionId Int

  modalidades Modalidad[] @relation("ProfesionalModalidades")
  servicios   Servicio[]  @relation("ProfesionalServicios")

  reseña      Reseña[]    @relation("ProfesionalReseñas")
  citas       Cita[]

}

//////////////////////////////////////////////////
//            C A T Á L O G O S                 //
//////////////////////////////////////////////////

model Categoria {
  id          Int      @id @default(autoincrement())
  nombre      String
  descripcion String?
  estatus     Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  profesiones Profesion[]
}

model Profesion {
  id          Int      @id @default(autoincrement())
  nombre      String
  descripcion String?
  estatus     Boolean  @default(true)

  categoria   Categoria @relation(fields: [categoriaId], references: [id])
  categoriaId Int

  profesionales Profesional[]
}

model Modalidad {
  id            Int           @id @default(autoincrement())
  nombre        String
  descripcion   String?
  profesionales Profesional[] @relation("ProfesionalModalidades")
}


model Cita {
  id        Int      @id @default(autoincrement())
  fecha     DateTime
  horario   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  usuario       Usuario @relation(fields: [usuarioId], references: [id])
  usuarioId     Int

  profesional   Profesional @relation(fields: [profesionalId], references: [id])
  profesionalId Int

  servicio      Servicio @relation(fields: [servicioId], references: [id])
  servicioId    Int

  quoteId           String?       // URL del quote en Open Payments
  incomingPaymentId String?       // URL del incoming payment
  
  // Detalles del quote
  debitAmount       String?       // "50 USD"
  receiveAmount     String?
}

model Reseña {
  id           Int      @id @default(autoincrement())
  calificacion Int // 1 a 5 estrellas
  comentario   String?
  fecha        DateTime @default(now())

  profesional   Profesional @relation("ProfesionalReseñas", fields: [profesionalId], references: [id])
  profesionalId Int

  usuario       Usuario @relation(fields: [usuarioId], references: [id])
  usuarioId     Int
}

model Servicio {
  id            Int           @id @default(autoincrement())
  nombre        String
  descripcion   String?
  profesionales Profesional[] @relation("ProfesionalServicios")
  citas         Cita[]
}